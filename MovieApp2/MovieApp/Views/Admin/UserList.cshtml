@model IEnumerable<MovieApp.Model.Users>

@{
    ViewBag.Title = "UserList";
}

<h2>UserList</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Fornavn)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Etternavn)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Epost)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.AccessLevel)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Fornavn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Etternavn)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Epost)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.AccessLevel)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditUser", new { id = item.Id }, new { @class = "btn btn-success" })
                @Html.ActionLink("Info", "UserInfo", new { id = item.Id }, new { @class = "btn btn-primary" })
            </td>
        </tr>
    }

</table>
<div class="form-group">
    <div class="col-xs-10 ">
        <h3>

            @Html.ActionLink("Legg til ny Kunde", "RegistrerUser")
            <br />

            @Html.ActionLink("Back to Dashboard", "Dashbord")
            <br>
        </h3>
    </div>
</div>


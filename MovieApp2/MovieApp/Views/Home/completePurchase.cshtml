@model MovieApp.Model.Order

@{
    ViewBag.Title = "Completed Purchase:";
    double total = 0;
}




<h2 id="overskrifterSomSkalBliMindre" class="col-xs-offset-4 col-sm-offset-4 col-md-offset-4 col-lg-offset-4">Du har kjøpt: </h2>
<hr />

<div class="container">
    <div id="rammeverkForFerdigKjop">
        <br /><br />
        <div class="col-xs-10 col-xs-offset-2 col-sm-10 col-sm-offset-2 col-md-6 col-md-offset-2 col-lg-3 col-lg-offset-2">
            <table class="table">
                <tr>
                    <th>
                        <p>Ordrenummer:</p>
                        @Html.DisplayFor(model => model.Id)
                    </th>
                </tr>
                <p>Filmer:</p>
                @foreach (var item in Model.OrderItems)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Movie.Title)
                        </td>
                    </tr>
                    total = total + item.Movie.Price;

                }
            </table>
            <h3>Totalsum : @total</h3>



            <h3 class="alert alert-success">
                Vellykket! <br />
                Takk og Velkommen tilbake!

            </h3>
        </div>


    </div>
</div>

<br /><br /><br /><br /><br /><br /><br />
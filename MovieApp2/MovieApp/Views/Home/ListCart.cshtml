@model List<MovieApp.Model.OrderItem>

@{
    ViewBag.Title = "ListCart";
    double total = 0;
}

<h2 id="overskrifterSomSkalBliMindre" class="col-xs-offset-4 col-sm-offset-4 col-md-offset-4 col-lg-offset-4">Din Bestilling:</h2>


<div class="container">
    <div id="rammeverkForBestilling" style="padding-bottom:15%;">
        <br /><br /><br />
        <div class="col-xs-10 col-xs-offset-1 col-sm-10 col-sm-offset-1 col-md-6 col-md-offset-1 col-lg-3 col-lg-offset-1">
            <table class="table">
                @foreach (var item in Model)
                {
                    <tr>
                        <td style="font-size:150%;">
                            @Html.DisplayFor(modelItem => item.Movie.Title)
                        </td>
                    </tr>
                    total = total + item.Movie.Price;
                }

            </table>
            <h3>Totalsum : @total</h3>
            @Html.ActionLink("Fullfør kjøp", "Betaling", new { }, htmlAttributes: new { @class = "btn btn-success" })
        </div>
    </div>
</div>

